<div class="container">
    <h1 class="my-2 p-2">Registered Users are:</h1>

    <table class="table table-responsive table-hover">
        <thead class="table-inverse">
            <tr>
                <td>SI. No</td>
                <td>Name</td>
                <td>Email</td>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="user in users">
                <td>{{$index + 1}}</td>
                <td>{{user.name}}</td>
                <td>{{user.email}}</td>
            </tr>
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function(){
        window.sr = ScrollReveal();
        sr.reveal('h1', {
            origin : 'left',
            distance : '300px',
            duration : '1000',
            delay: '200'
        });
        sr.reveal('table', {
            origin : 'bottom',
            distance : '100px',
            duration : '2000',
            delay : '500'
        });
    });
</script>